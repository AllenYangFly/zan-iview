{
    "htmlmin": {
        "src": "./server/views/**/*.html",
        "dest": "./server_dist/views",
        "options": {
            "collapseWhitespace": true,
            "minifyCSS": true,
            "minifyJS": true,
            "removeComments": true
        }
    },
    "bower": [
        "./client/wap/bower.json",
        "./client/www/bower.json"
    ],
    "babel": [
        {
            "src": "./server",
            "dest": "./server_dist"
        }
    ]
}